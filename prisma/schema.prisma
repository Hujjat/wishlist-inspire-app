// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id          String    @id
  shop        String
  state       String
  isOnline    Boolean   @default(false)
  scope       String?
  expires     DateTime?
  accessToken String
  userId      BigInt?
}

model Settings {
  id          Int    @id @default(autoincrement())
  shop        String?  @unique
  name        String
  description String?
}

// Create Wishlist model with relations to Session. Store session id in wishlist table with one to many relation
model Wishlist {
  id              Int      @id @default(autoincrement())
  customerId      String?
  productId       String?
  shop            String?
  createdAt       DateTime @default(now())
}
